<br>
<%= form_for @game, :html => {:class => 'form-horizontal' } do |form| %>
  <% if @game.errors.present? %>
    <ul>
      <% @game.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  
  <fieldset>
    <div class="control-group">
      <%= form.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= form.text_field :title %>
      </div>
    </div>
    
    <div class="control-group">
      <%= form.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= form.text_area(:description, :cols => 80, :rows => 10) %>
      </div>
    </div>
    
    <div class="control-group">
      <%= form.label :body, :class => 'control-label' %>
      <div class="controls">
        <%= form.text_area(:body, :cols => 80, :rows => 10) %>
      </div>
    </div>
  </fieldset>
  
  <fieldset class="form-actions">
    <%= form.submit "Create", :class => 'btn btn-primary' %>
  </fieldset>
<% end %>